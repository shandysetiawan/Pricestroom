{
  "name": "Hello Extensions",
  "description": "Price tracking extension for tokopedia and bukalapak",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png"
  },
  "permissions": ["tabs", "storage", "alarms", "activeTab", "*://*.tokopedia.com/*","*://*.bukalapak.com/*"],
  "background": {
    "scripts": ["assets/jquery-3.5.1.dev.js", "assets/background.js"]
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "PriceStroom"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens index.html"
    }
  },
  "content_scripts": [{
    "matches": ["*://*.stackoverflow.com/*", "*://*.tokopedia.com/*", "*://*.bukalapak.com/*"],
    "js": ["assets/content.js"]
  }]
}
